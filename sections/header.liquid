{%- style -%}
  .header {
    background: {{ section.settings.bg_color }};
    padding: {{ section.settings.padding_y }}px 0;
    border-bottom: 1px solid var(--color-border);
  }

  .header__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .header__logo-img {
    max-width: {{ section.settings.logo_width }}px;
  }

  .header__menu-list {
    display: flex;
    gap: 20px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .header__menu-link {
    text-decoration: none;
    color: var(--color-text);
    font-weight: 500;
  }

  {% if section.settings.sticky_header %}
  .header-wrapper.sticky {
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  {% endif %}

  /* Desktop Logo Alignment */
  {% if section.settings.logo_position == 'center' %}
    .header__content {
      justify-content: space-between;
    }
    .header__logo {
      order: 1;
      flex-grow: 1;
      text-align: center;
    }
    .header__nav {
      order: 0;
      flex: 1;
    }
    .header__icons {
      order: 2;
      flex: 1;
      display: flex;
      justify-content: flex-end;
    }
  {% endif %}
{%- endstyle -%}

<div class="header-wrapper{% if section.settings.sticky_header %} sticky-header{% endif %}">
  <header class="header page-width">
    <div class="header__content">
      
      {%- if section.settings.logo_position != 'center' -%}
        <div class="header__logo">
          <a href="{{ routes.root_url }}">
            {%- if section.settings.logo != blank -%}
              <img src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}"
                class="header__logo-img"
                alt="{{ shop.name }}"
                width="{{ section.settings.logo_width }}"
                height="{{ section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio }}">
            {%- else -%}
              <span class="h2">{{ shop.name }}</span>
            {%- endif -%}
          </a>
        </div>
      {%- endif -%}

      <nav class="header__nav">
        <ul class="header__menu-list">
          {%- for link in section.settings.menu.links -%}
            <li>
              <a href="{{ link.url }}" class="header__menu-link">{{ link.title }}</a>
            </li>
          {%- endfor -%}
        </ul>
      </nav>

      {%- if section.settings.logo_position == 'center' -%}
        <div class="header__logo">
          <a href="{{ routes.root_url }}">
            {%- if section.settings.logo != blank -%}
              <img src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}"
                class="header__logo-img"
                alt="{{ shop.name }}"
                width="{{ section.settings.logo_width }}"
                height="{{ section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio }}">
            {%- else -%}
              <span class="h2">{{ shop.name }}</span>
            {%- endif -%}
          </a>
        </div>
      {%- endif -%}

      <div class="header__icons">
        <a href="{{ routes.search_url }}" class="header__icon">
          Search
        </a>
        <a href="{{ routes.cart_url }}" class="header__icon">
          Cart
        </a>
      </div>
    </div>
  </header>
</div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Custom logo width",
      "default": 100
    },
    {
      "type": "select",
      "id": "logo_position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left",
      "label": "Desktop logo position"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Menu"
    },
    {
      "type": "checkbox",
      "id": "sticky_header",
      "default": true,
      "label": "Enable sticky header"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_y",
      "min": 10,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Vertical Padding",
      "default": 20
    }
  ]
}
{% endschema %}
