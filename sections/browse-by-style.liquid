{%- style -%}
  .browse-by-style {
    background-color: #F0F0F0;
    padding: 60px 0;
    margin: 40px 0;
    border-radius: 40px;
  }

  .browse-by-style__title {
    font-family: 'Integral CF', sans-serif;
    font-size: 48px;
    font-weight: 900;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 50px;
  }

  .style-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    /* Grid Layout: 
       Row 1: [Small] [Large]
       Row 2: [Large] [Small]
    */
  }

  .style-card {
    position: relative;
    height: 280px;
    border-radius: 20px;
    overflow: hidden;
    background-color: white;
    text-decoration: none;
    transition: transform 0.2s;
  }
  
  .style-card:hover {
    transform: scale(1.02);
  }

  .style-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .style-card__title {
    position: absolute;
    top: 24px;
    left: 24px;
    font-size: 24px;
    font-weight: 700;
    color: black;
    z-index: 2;
  }

  /* Specific Span Classes for asymmetric grid */
  .style-card--large {
    grid-column: span 2;
  }

  @media screen and (max-width: 749px) {
    .browse-by-style { padding: 40px 20px; border-radius: 20px; }
    .browse-by-style__title { font-size: 32px; margin-bottom: 30px; }
    .style-grid { display: flex; flex-direction: column; gap: 16px; }
    .style-card { height: 200px; width: 100%; }
    .style-card--large { grid-column: auto; }
  }
{%- endstyle -%}

<div class="page-width">
  <div class="browse-by-style">
    <h2 class="browse-by-style__title">{{ section.settings.title | escape }}</h2>
    
    <div class="style-grid">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link }}" class="style-card {% if forloop.index == 2 or forloop.index == 3 %}style-card--large{% endif %}">
          <span class="style-card__title">{{ block.settings.title }}</span>
          {%- if block.settings.image != blank -%}
            <img src="{{ block.settings.image | image_url: width: 600 }}"
              alt="{{ block.settings.title }}"
              class="style-card__image"
              loading="lazy"
              width="600"
              height="{{ 600 | divided_by: block.settings.image.aspect_ratio }}">
          {%- else -%}
             {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg style-card__image' }}
          {%- endif -%}
        </a>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Browse by Style",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "BROWSE BY DRESS STYLE",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "style",
      "name": "Style Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "Casual",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Browse by Style",
      "blocks": [
        { "type": "style", "settings": { "title": "Casual" } },
        { "type": "style", "settings": { "title": "Formal" } },
        { "type": "style", "settings": { "title": "Party" } },
        { "type": "style", "settings": { "title": "Gym" } }
      ]
    }
  ]
}
{% endschema %}
